@using Eclerx.Program3.RupaliDound.Models
@model Supplier
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="container">
    <div class="row">
        <div class="col-6">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="mb-2">
                    @Html.LabelFor(p => p.ContactName)
                    @Html.TextBoxFor(p => p.ContactName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.ContactName)
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.Address)
                    @Html.TextBoxFor(p => p.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.Address)
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.City)
                    @Html.TextBoxFor(p => p.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.City)
                </div>
               
                <div class="mb-2">
                    <button type="submit" class="btn btn-info">Save</button>
                    
                </div>
            }
        </div>
    </div>
</div>

